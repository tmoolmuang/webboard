<div class="row">
  <div class="col-md-6">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-6">
    <% if user_signed_in? %>
      <%= link_to "Edit", edit_category_post_path(@post.category, @post), class: 'btn btn-primary' %>
      <%= link_to "Delete Post", [@post.category, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>
    <%= link_to "Back to Category", category_path(@post.category), class: 'btn btn-default' %>
  </div>
</div>