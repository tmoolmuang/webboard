<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
  </div>
  <div class="col-md-6 top">
  </div>
  <div class="col-md-2">
  </div>
  <div class="col-md-1">
  </div>
</div>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
    <div class="left short">
    </div>
  </div>
  <div class="col-md-6">
    <div class="mid">
      <div class="post-header">
        <%= render partial: 'likes/like', locals: { post: @post } %>
        <%= @post.body %>
      </div>
      <div class="comment-padding">
        <u>Comments</u>
        <% @post.comments.each do |c| %>
          <%= render partial: 'comments/comment', locals: {comment: c} %>
        <% end %>
        <% if current_user %>
          <%= render 'comments/form', comment: Comment.new, post: @post %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="right short middiv">
      <% if user_signed_in? %>
        <br />
        <%= link_to "Edit Post", edit_category_post_path(@post.category, @post), class: 'btn btn-primary' %>
        <%= link_to "Delete Post", [@post.category, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'All related comments will also be deleted. Are you sure you want to delete this post?' } %>
      <% end %>
      <br /><br />
      <%= link_to "Back to Category", category_path(@post.category), class: 'btn btn-default' %>
    </div>
  </div>
  <div class="col-md-1">
  </div>
</div>

