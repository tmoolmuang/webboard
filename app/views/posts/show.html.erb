<h3><%= @post.title %></h3>
<div class="row">
  <div class="col-md-6">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-6">
    <%= link_to "Edit", edit_category_post_path(@post.category, @post), class: 'btn btn-success' %>
    <%= link_to "Delete Post", [@post.category, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <%= link_to "Back", category_path(@post.category), class: 'btn btn-default' %>
  </div>
</div>