<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
  </div>
  <div class="col-md-6 top">
    <h4><%= @category.name %>&nbsp;&nbsp;&nbsp;&nbsp;</h4>
    <%= link_to "Edit Category", edit_category_path, class: 'btn btn-success' %>
    <%= link_to "Delete Category", @category, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?' } %>
  </div>
  <div class="col-md-2 top">
  </div>
  <div class="col-md-1">
  </div>
</div>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
    <div class="left">
    </div>
  </div>
  <div class="col-md-6">
    <div class="mid">
      <h4><%= @category.description %></h4>
      <% @category.posts.each do |post| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to post.title, category_post_path(@category, post) %>
            </h4>
            <small>
              submitted <%= time_ago_in_words(post.created_at) %> ago <br />
              <%= post.comments.count %> Comments
            </small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="right">
      <%= link_to "New Post", new_category_post_path(@category), class: 'btn btn-success' %>
      <br /><br />
      <%= link_to "Delete category", @category, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?' } %>
    </div>
  </div>
  <div class="col-md-1">
  </div>
</div>

