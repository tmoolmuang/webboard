<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
  </div>
  <div class="col-md-6 top">
  </div>
  <div class="col-md-2">
  </div>
  <div class="col-md-1">
  </div>
</div>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
    <div class="left short">
    </div>
  </div>
  <div class="col-md-6">
    <div class="mid short">
      <div>
        <div class="cat-header">
          <%= @category.description %>
        </div>
        <% @posts_page.each do |post| %>
          <div class="cat-post detail">
            <%= link_to (post.body.html_safe).truncate_words(25), category_post_path(@category, post) %><br />
            <small>posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.email %>
              <div class="pull-right">
                <%= pluralize(post.comments.count, "comment") %>
              </div>
            </small>
          </div>
        <% end %>
        <div class="bottom-align-div">
          <%= paginate @posts_page %><%= page_entries_info @posts_page %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="right short">
      <% if is_admin? %>
        <%= link_to "Edit Category", edit_category_path, class: 'btn btn-primary' %>
        <%= link_to "Delete Category", @category, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?' } %>
      <% end %>
      <br /><br />
      <% if user_signed_in? %>
        <%= link_to "New Post", new_category_post_path(@category), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <div class="col-md-1">
  </div>
</div>

