<div class="row">
  <div class="col-md-1 one">
  </div>
  <div class="col-md-2 two">
  </div>
  <div class="col-md-6 six">
    <%= image_tag("main/rushmore.png", :alt => "travel", size: "728x90") %>
  </div>
  <div class="col-md-2 two">
  </div>
  <div class="col-md-1 one">
  </div>
</div>

<div class="row">
  <div class="col-md-1 one">
  </div>
  <div class="col-md-2 two">
    <div class="left tall middiv">
      <iframe style="width:120px;height:240px;" marginwidth="0" marginheight="0" scrolling="no" frameborder="0" src="//ws-na.amazon-adsystem.com/widgets/q?ServiceVersion=20070822&OneJS=1&Operation=GetAdHtml&MarketPlace=US&source=ac&ref=tf_til&ad_type=product_link&tracking_id=webboard05-20&marketplace=amazon&region=US&placement=B00V7T1YRQ&asins=B00V7T1YRQ&linkId=5f701940c0ef1fdbd34c3fc244ddfb41&show_border=true&link_opens_in_new_window=true&price_color=333333&title_color=0066c0&bg_color=ffffff">
      </iframe>
      <iframe style="width:120px;height:240px;" marginwidth="0" marginheight="0" scrolling="no" frameborder="0" src="//ws-na.amazon-adsystem.com/widgets/q?ServiceVersion=20070822&OneJS=1&Operation=GetAdHtml&MarketPlace=US&source=ac&ref=tf_til&ad_type=product_link&tracking_id=webboard05-20&marketplace=amazon&region=US&placement=B01BY6UCDS&asins=B01BY6UCDS&linkId=ad1997e11fbe6a495cef1a5ff8a77cfd&show_border=true&link_opens_in_new_window=true&price_color=333333&title_color=0066c0&bg_color=ffffff">
      </iframe>
    </div>
  </div>
  <div class="col-md-6 six">
    <div class="mid tall">
      <% @categories.each do |category| %>
        <div>
          <div class="cat-header">
            <%= link_to category.name, category %>&nbsp;&nbsp;
            <%= category.description %>
            <div class="pull-right">
              <%= pluralize(category.posts.count, "post") %>
            </div>
          </div>
          <% category.posts.first(5).each do |p| %>
          <div class='cat-post'>
            <%= (p.body.html_safe).truncate(160) %>
            <small>
              <div class="like-info"><%= p.like %>&nbsp;&nbsp;<span class="glyphicon glyphicon-thumbs-up"></span></div>
              <div class="post-info"><%= time_ago_in_words(p.created_at) %> ago by <span class="email"><%= p.user.email.truncate(25) %></span></div>
            </small>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-2 two">
    <div class="right tall middiv">
      <% if is_admin? %>
        <%= link_to "Add New Category", new_category_path, class: 'btn btn-primary' %><br /><br />
      <% end %>
      <div class="middiv">
        <iframe src="//rcm-na.amazon-adsystem.com/e/cm?o=1&p=14&l=ur1&category=camera&banner=0X573SW5MCVBMYR6EN02&f=ifr&linkID=781ea01ce550df129fee11c6d5af3fe2&t=webboard05-20&tracking_id=webboard05-20" width="160" height="600" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  <div class="col-md-1 one">
  </div>
</div>
