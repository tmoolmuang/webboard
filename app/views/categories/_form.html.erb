<%= form_for category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter category name" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter category description" %>
  </div>
  <div class="form-group">
    <%= f.check_box :public %>
    <%= f.label :public_category %>   
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
  <%= link_to "Cancel", call_back, class: 'btn btn-default' %>
<% end %>
