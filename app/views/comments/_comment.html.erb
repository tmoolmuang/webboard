<div class="media">
  <div class="media-body">
    <small>
      <span class="email"><%= comment.user.email %></span> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if user_owned_comment?(comment) %>
         | <%= link_to "Delete", [@post, comment], method: :delete %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
</div>